{
  "name": "coding",
  "version": "0.0.1",
  "description": "Coding service for Code2Gather",
  "private": true,
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1"
  },
  "scripts": {
    "lint": "eslint . --fix --ext .js && prettier --write \"**/*.js\" --tab-width 2",
    "lint:ci": "eslint . --ext .js && prettier --check \"**/*.js\" --tab-width 2",
    "start": "set PORT=3001 && npx y-websocket"
  },
  "lint-staged": {
    "**/*.js": [
      "pretty-quick --staged",
      "eslint --fix"
    ]
  },
  "type": "module",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http": "^0.0.1-security",
    "lib0": "^0.2.42",
    "socket.io": "^4.3.1",
    "socket.io-p2p-server": "^1.2.0",
    "ws": "^8.2.3"
  }
}
