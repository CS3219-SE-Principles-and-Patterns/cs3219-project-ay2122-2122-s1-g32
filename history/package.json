{
  "name": "history",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.2",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^4.0.0",
    "faker": "^5.5.3",
    "jest": "^27.2.4",
    "prisma": "^3.1.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "morgan": "^1.10.0"
  },
  "scripts": {
    "build:prepare": "tsc --build --clean",
    "build": "yarn build:prepare && set debug=* && prisma generate && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./build",
    "db:create": "test -e scripts/db/db_create_local.sh && ./scripts/db/db_create_local.sh || ./scripts/db/db_create.sh",
    "db:migrate": "prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test prisma migrate dev",
    "lint": "eslint . --fix --ext .ts,.js && prettier --write \"src/**/*.{ts,js}\" --tab-width 2",
    "lint:ci": "eslint . --ext .ts,.js && prettier --check \"src/**/*.{ts,js}\" --tab-width 2",
    "start": "set debug=* && prisma generate && cross-env NODE_ENV=development ts-node-dev --exit-child --respawn --transpile-only -r tsconfig-paths/register ./src/index.ts",
    "test:prepare": "yarn db:migrate:test",
    "test": "yarn test:prepare && dotenv -e .env.test cross-env NODE_ENV=test jest -- --runInBand --detectOpenHandles --forceExit --passWithNoTests --verbose"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "pretty-quick --staged",
      "eslint --fix"
    ]
  }
}
