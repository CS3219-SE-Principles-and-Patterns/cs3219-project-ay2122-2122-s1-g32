{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "outDir": "build",
    "paths": {
      "controllers/*": ["./controllers/*"],
      "lib/*": ["./lib/*"],
      "middlewares/*": ["./middlewares/*"],
      "policies/*": ["./policies/*"],
      "routes/*": ["./routes/*"],
      "services/*": ["./services/*"],
      "types/*": ["./types/*"],
      "utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*", "jest.config.js"],
  "exclude": ["node_modules"]
}
