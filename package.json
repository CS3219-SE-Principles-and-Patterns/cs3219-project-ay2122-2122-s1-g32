{
  "name": "code2gather",
  "version": "0.0.1",
  "description": "Code2Gather, GetHired2Gather",
  "repository": "https://github.com/CS3219-SE-Principles-and-Patterns/cs3219-project-ay2122-2122-s1-g32",
  "author": "Team 32",
  "private": true,
  "workspaces": [
    "auth",
    "code-executor",
    "frontend",
    "gateway",
    "history",
    "pairing",
    "room",
    "video",
    "coding"
  ],
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/cz-commitlint": "^13.2.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "commitizen": "^4.2.4",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "markdownlint-cli": "^0.29.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-prisma": "^3.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "commit": "git-cz",
    "export-requirements": "poetry export --without-hashes -f requirements.txt > requirements.txt",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:css": "stylelint '**/*.{scss,sass,css}'",
    "lint:md": "markdownlint '**/*.md' --ignore-path .gitignore",
    "lint:py": "poetry run black . && poetry run isort . && poetry run flake8 --select=F && poetry run mypy --namespace-packages .",
    "setup": "run-s setup:*",
    "setup:history": "cd history && yarn db:create && yarn db:migrate && cd ..",
    "setup:room": "yarn protobuf && cd room && yarn db:seed",
    "pre-commit": "lint-staged",
    "protobuf": "./compile-proto-messages.sh",
    "postinstall": "run-p postinstall:*",
    "postinstall:root": "poetry install",
    "postinstall:code-executor": "cd code-executor && poetry install",
    "prepare": "node -e \"if(require('fs').existsSync('.git')){process.exit(1)}\" || husky install",
    "start": "docker-compose up -f docker-compose.local.yml",
    "stylelint-check": "stylelint-config-prettier-check"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx}": [
      "eslint --fix"
    ],
    "**/*.{scss,sass,css}": [
      "stylelint --fix"
    ],
    "**/*.md": [
      "markdownlint --fix"
    ],
    "**/*.py": [
      "poetry run black",
      "poetry run isort",
      "poetry run flake8 --select=F",
      "poetry run mypy --namespace-packages"
    ]
  }
}
